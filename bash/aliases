### Utility
alias c='clear'
alias e='exit'
alias h='history'
alias reload='source ~/.bashrc' 
alias o='open'
alias f='open -a Finder .'
alias fixopenwith='/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user' 
alias man=dman # dman function in functions bash
alias wifi="networksetup -setairportpower en0"
alias con="tail -40 -f /var/log/system.log"
alias h="history"
alias hg="history | grep "

### Search
alias google='open http://www.google.com/search?q="'

### Open Files

# editorChoice="bbedit"
editorChoice="subl"

alias oalias='$editorChoice ~/Dropbox/code/dotfiles/bash/aliases'
alias oconfig='$editorChoice ~/Dropbox/code/dotfiles/bash/config'
alias oenv='$editorChoice ~/Dropbox/code/dotfiles/bash/env'
alias ofunctions='$editorChoice ~/Dropbox/code/dotfiles/bash/functions'

### Open note Files
alias list='$editorChoice ~/Dropbox/Notes/tpLists'
alias lists='$editorChoice ~/Dropbox/Notes/tpLists'
alias tpl='$editorChoice ~/Dropbox/Notes/tpLists'

### Processes
alias tu='top -o cpu'
alias tm='top -o vsize'
alias psg='ps -e | grep '			# find process with grep

### Tool & Apps
alias ph="nph"
alias bb='bbedit'
alias bbf='bbfind'
# alias ql='qlmanage -p &>/dev/null'
alias redock='killall Dock'         # Restart dock
alias refinder='killall Finder'		# Restart finder
alias mdf="mdfind -onlyin ." 

### Listing
alias l='ls -alh'
alias ll='ls –color=always -alh | less'
alias lr='ls -alhsr'
alias lrl='ls –color=yes -alhsr | less'
alias l1='ls -1'
alias l1l='ls –color=always -1 | less'
alias lg='ls | grep -i '  # list with grep
# alias lga='grep -Hrnl $#argv ./ '  # list with grep


### Directories
